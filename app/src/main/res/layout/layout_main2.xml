<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="350dp"
    android:layout_marginStart="20dp"
    android:layout_height="100dp"
    android:layout_marginLeft="20dp">

    <ImageView
        android:id="@+id/imageview_persona"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/borde_items"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_toStartOf="@+id/tv_nombre"
        android:layout_toLeftOf="@+id/tv_nombre"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="140dp"
        android:layout_height="100dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginRight="-2dp"
        android:layout_toStartOf="@+id/imageview_flecha"
        android:layout_toLeftOf="@+id/imageview_flecha"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/imageview_flecha"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_weight="1"
        tools:srcCompat="@tools:sample/avatars" />
</RelativeLayout>



